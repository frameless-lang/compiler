data State = First, Second(Number), Third(Number);

reducer : \States, Number -> State
reducer = \First, action -> Second[ action ]
reducer = \Second[ value ], action -> Third[ value + action ]

main : \{}, {} -> Output
main = \_, _ ->
	$div
		let action: Action;
		let state = action:scan(reducer, First);

		match stateState
			case \First ->
				$button{
					onclick = \_ -> action = 1;
				}
					"first"
			case \Second[ value ] ->
				$button{
					onclick = \_ -> action = 2;
				}
					"second: ${value}"
			case \Third[ value ] ->
				"third: ${value}"
