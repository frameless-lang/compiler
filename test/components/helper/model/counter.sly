data Action = Increment, Decrement;

reducer : \Number, Action -> Number
reducer = \state, Increment -> state + 1
reducer = \state, Decrement -> state - 1

#[webcomponent]
main : \ {}, {} -> Output
main = \_, _ ->
	let counterState = 0;
	$button{
		onclick = \_ ->
			counterState = reducer(counterState, Decrement);
	}
		"Decrement"
	$button{
		onclick = \_ ->
			counterState = reducer(counterState, Increment);
	}
		"Increment"
	"${counterState}"
