data Action = RemoveSelection, AddSelection;

store = \_ -> {
	init = false
	reducer : \Boolean, Action -> Boolean
	reducer = \_, RemoveSelection -> False
	reducer = \_, AddSelection    -> True
}

main : \{ page: Integer }, {} -> View
main = \props, _ ->
	let entity <- [props.page * 10 .. (props.page * 10 + 10)];
	let [selectionState, selectionDispatch] <- model(store(props.page));

	$div{
		class?selected = selectionState
		onclick = \_ -> selectionDispatch(if selectionState then RemoveSelection else AddSelection)
	}
		"${entity}"
