import /vendor/strictly/prelude/src/index.js (fetchText)

model:data{
	init* = /id -> fetchText("/api/${id}")
	reducer = /Pending, Ok(response) -> Result( response )
	reducer = /Pending, error@Error(_) -> error
}

view
	#if props.load
		#model \(dataState, _) <- data(props.id)
			#match dataState
				#case Pending
					"Loading..."
				#case Result( content )
					"${content}"
				#case Error( _ )
					"could not load"
	#else
		"not to be loaded"
